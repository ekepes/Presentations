@{
    ViewBag.Title = "Demo1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Demo1</h2>

<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        var dateString = "2012-10-01T10:00:00 -0900";
        document.writeln("As a string: " + dateString);
        document.writeln("<br/>");
        var now = moment(dateString);
        document.writeln("Show me the time zone: " + 
            now.format("YYYY-MM-DD HH:mm:ss ZZ"));
        document.writeln("<br/>");
        document.writeln("Just the facts: " + 
            now.format("YYYY-MM-DD HH:mm:ss"));
    });
</script>
